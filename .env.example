# n8n Configuration
# Copy this file to .env and update the values

# Host configuration
N8N_HOST=your-domain.com
N8N_PROTOCOL=https
WEBHOOK_URL=https://your-domain.com/
TIMEZONE=America/New_York

# Basic Authentication (Optional - use for additional layer of security)
# If enabled, this adds HTTP Basic Auth on top of n8n's login
N8N_BASIC_AUTH_ACTIVE=false
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=change-this-password

# Encryption Key (IMPORTANT: Generate a random 32-character string)
# Use: openssl rand -hex 32
N8N_ENCRYPTION_KEY=your-encryption-key-here

# Security Settings
N8N_SECURE_COOKIE=true

# PostgreSQL Configuration (Optional - uncomment if using PostgreSQL)
# POSTGRES_USER=n8n
# POSTGRES_PASSWORD=change-this-postgres-password
# POSTGRES_DB=n8n
